@model IEnumerable<HotelManagementSystem.Models.Room.RoomCategory>
@{
    ViewData["Title"] = "Our Rooms & Suites";
}

<div class="bg-light py-5">
    <div class="container">
        <h1 class="text-center mb-5">Our Rooms & Suites</h1>

        <div class="row">
            @foreach (var category in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="room-card">
                        <img src="/images/@(category.Name)-room.jpg" alt="@category.Name Room" class="img-fluid">
                        <div class="room-details p-4">
                            <h3 class="text-capitalize">@category.Name Room</h3>
                            <p>@category.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="badge bg-info me-2">
                                        <i class="bi bi-person-fill"></i> @category.Capacity
                                    </span>
                                    <span class="price d-block mt-2">From $@category.BasePrice/night</span>
                                </div>
                                <a asp-action="Details" asp-route-id="@category.CategoryId" class="btn btn-outline-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Room Features Section -->
<div class="container py-5">
    <h2 class="text-center mb-5">All Rooms Feature</h2>
    
    <div class="row text-center">
        <div class="col-md-3 mb-4">
            <i class="bi bi-wifi fs-1 text-primary mb-3"></i>
            <h5>High-Speed WiFi</h5>
        </div>
        <div class="col-md-3 mb-4">
            <i class="bi bi-tv fs-1 text-primary mb-3"></i>
            <h5>Flat Screen TV</h5>
        </div>
        <div class="col-md-3 mb-4">
            <i class="bi bi-wind fs-1 text-primary mb-3"></i>
            <h5>Climate Control</h5>
        </div>
        <div class="col-md-3 mb-4">
            <i class="bi bi-safe2 fs-1 text-primary mb-3"></i>
            <h5>In-Room Safe</h5>
        </div>
    </div>
</div>